<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lol"
        android:layout_width="124dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/images"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/lolTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="League of Legends"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="77dp" />

    <ImageView
        android:id="@+id/zzz"
        android:layout_width="226dp"
        android:layout_height="134dp"
        app:srcCompat="@drawable/zzz"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="164dp" />

    <TextView
        android:id="@+id/zzzTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zenless Zone Zero"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="236dp" />

    <ImageView
        android:id="@+id/arc"
        android:layout_width="118dp"
        android:layout_height="178dp"
        app:srcCompat="@drawable/arc_riders"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/arTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arc Raiders"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="401dp" />

    <ImageView
        android:id="@+id/dispatch"
        android:layout_width="242dp"
        android:layout_height="141dp"
        app:srcCompat="@drawable/dispatch"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="538dp" />

    <TextView
        android:id="@+id/dispatchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispatch"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="580dp" />
</androidx.constraintlayout.widget.ConstraintLayout>